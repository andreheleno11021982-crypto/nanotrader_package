name: Compilação de depuração do Android

on:
  push:
    branches: [ "main" ]
  pull_request:
    branches: [ "main" ]

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      # Checkout do código
      - name: Repositório de checkout
        uses: actions/checkout@v4

      # Configurar Java (JDK 17)
      - name: Configurar o JDK 17
        uses: actions/setup-java@v4
        with:
          distribution: temurin
          java-version: '17'

      # Configurar Node.js (v18)
      - name: Configurar o Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '18'

      # Instalar dependências
      - name: Instalar dependências
        run: npm install

      # Construir APK
      - name: Construir APK para Android
        run: |
          npx expo prebuild
          ./gradlew assembleDebug

      # Upload do APK como artefato
      - name: Upload do APK
        uses: actions/upload-artifact@v4
        with:
          name: app-debug
          path: android/app/build/outputs/apk/debug/app-debug.apk

